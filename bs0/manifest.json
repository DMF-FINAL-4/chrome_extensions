{
  "manifest_version": 3,
  "name": "My Side Panel Extension",
  "version": "1.0",
  "description": "크롬 브라우저 측면에 사이드 패널을 표시하는 확장 프로그램입니다.",
  "permissions": [
    "sidePanel"
  ],
  "action": {
    "default_title": "사이드 패널 열기"
  },
  "side_panel": {
    "default_path": "side_panel/side_panel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
