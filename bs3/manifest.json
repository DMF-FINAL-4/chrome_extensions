{
  "manifest_version": 3,
  "name": "My Extension",
  "description": "버튼 1-1 클릭 시 현재 페이지 저장",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "My Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "side_panel": {
    "default_path": "side_panel/side_panel.html"
  }
}
